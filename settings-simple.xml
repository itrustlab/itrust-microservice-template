<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- Servers Configuration for Authentication -->
    <servers>
        <!-- iTrust Releases Repository -->
        <server>
            <id>itrust-releases</id>
            <username>itrdev</username>
            <password>iTrust@132</password>
        </server>
        
        <!-- iTrust Snapshots Repository -->
        <server>
            <id>itrust-snapshots</id>
            <username>itrdev</username>
            <password>iTrust@132</password>
        </server>
    </servers>

    <!-- Profiles Configuration -->
    <profiles>
        <profile>
            <id>itrust-nexus</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            
            <!-- Repository Configuration -->
            <repositories>
                <!-- Maven Central -->
                <repository>
                    <id>central</id>
                    <name>Maven Central Repository</name>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                
                <!-- iTrust Releases Repository -->
                <repository>
                    <id>itrust-releases</id>
                    <name>iTrust Releases Repository</name>
                    <url>http://192.168.1.162:8081/repository/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                
                <!-- iTrust Snapshots Repository -->
                <repository>
                    <id>itrust-snapshots</id>
                    <name>iTrust Snapshots Repository</name>
                    <url>http://192.168.1.162:8081/repository/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            
            <!-- Plugin Repository Configuration -->
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>Maven Central Plugin Repository</name>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                
                <pluginRepository>
                    <id>itrust-releases</id>
                    <name>iTrust Releases Plugin Repository</name>
                    <url>http://192.168.1.162:8081/repository/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    
    <!-- Active Profiles -->
    <activeProfiles>
        <activeProfile>itrust-nexus</activeProfile>
    </activeProfiles>

</settings>
